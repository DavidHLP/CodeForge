<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.david.mapper.UserMapper">

    <resultMap id="UserDetails" type="com.david.entity.user.AuthUser">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <association property="role" javaType="com.david.entity.role.Role">
            <id property="id" column="role_id"/>
            <result property="roleName" column="role_name"/>
            <collection property="permissions" ofType="com.david.entity.permission.Permission">
                <id property="id" column="permission_id"/>
                <result property="permission" column="permission"/>
            </collection>
        </association>
        <!-- 添加authorities字段映射，确保为空列表而不是null -->
        <collection property="authorities" ofType="java.lang.String">
            <!-- 这里暂时不映射任何数据库字段，让authorities保持为空列表 -->
        </collection>
    </resultMap>

    <select id="loadUserByUsername" resultMap="UserDetails">
        SELECT
            u.user_id, u.username, u.email, u.password, u.status,
            r.id AS role_id, r.role_name,
            p.id AS permission_id, p.permission
        FROM
            `user` u
        LEFT JOIN `user_role` ur ON u.user_id = ur.user_id
        LEFT JOIN `role` r ON ur.role_id = r.id AND r.status = 1
        LEFT JOIN `role_permission` rp ON r.id = rp.role_id
        LEFT JOIN `permission` p ON rp.permission_id = p.id AND p.status = 1
        WHERE
            u.username = #{username} AND u.status = 1
    </select>

</mapper>