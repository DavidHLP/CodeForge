<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.david.mapper.SubmissionMapper">
    <resultMap id="SubmissionCardVoResultMap" type="com.david.submission.vo.SubmissionCardVo">
        <id property="id" column="id"/>
        <result property="problemId" column="problem_id"/>
        <result property="userId" column="user_id"/>
        <result property="language" column="language"/>
        <result property="status" column="status"/>
        <result property="timeUsed" column="time_used"/>
        <result property="memoryUsed" column="memory_used"/>
    </resultMap>
    <select id="pageSubmissionCardVos" resultMap="SubmissionCardVoResultMap">
        select id, problem_id, user_id, language, status, time_used, memory_used
        from submissions
        <where>
            <if test="problemId != null">
                and problem_id = #{problemId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>
    <resultMap id="CalendarVoResultMap" type="com.david.calendar.vo.CalendarVo">
        <id property="date" column="date"/>
        <result property="count" column="count"/>
    </resultMap>
    <select id="getSubmissionCalendar" resultMap="CalendarVoResultMap">
        select date(created_at) as date, count(*) as count
        from submissions
        where user_id = #{userId}
        group by date(created_at)
        order by date
    </select>
    <!-- 用户统计：提交总数 -->
    <select id="countUserSubmissions" resultType="long">
        select count(*) from submissions where user_id = #{userId}
    </select>
    <!-- 用户统计：通过提交总数（按提交数量计） -->
    <select id="countUserAcceptedSubmissions" resultType="long">
        select count(*) from submissions where user_id = #{userId} and status = 'ACCEPTED'
    </select>
    <!-- 用户统计：尝试过的题目数量（去重） -->
    <select id="countUserAttemptedProblems" resultType="long">
        select count(distinct problem_id) from submissions where user_id = #{userId}
    </select>
    <!-- 用户统计：通过的题目数量（按题目去重） -->
    <select id="countUserSolvedProblems" resultType="long">
        select count(distinct problem_id) from submissions where user_id = #{userId} and status = 'ACCEPTED'
    </select>
</mapper>