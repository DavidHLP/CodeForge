<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.david.mapper.SolutionMapper">
    <resultMap id="SolutionCardVoResultMap" type="com.david.solution.vo.SolutionCardVo">
        <id property="id" column="id"/>
        <result property="problemId" column="problem_id"/>
        <result property="userId" column="user_id"/>
        <result property="tags" column="tags" javaType="java.util.List"
                typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
        <result property="contentView" column="content"/>
        <result property="title" column="title"/>
        <result property="language" column="language"/>
        <result property="views" column="views"/>
        <result property="comments" column="comments"/>
    </resultMap>
    <update id="updateViews">
        UPDATE solutions
        SET views = views + 1
        WHERE id = #{id}
    </update>
    <select id="pageSolutionsCardVos" resultMap="SolutionCardVoResultMap">
        SELECT
        *
        FROM
        solutions
        <where>
            <if test="problemId != null">
                AND problem_id = #{problemId}
            </if>
            <if test="keyword != null and keyword != ''">
                AND content LIKE CONCAT('%', #{keyword}, '%')
            </if>
            <if test="keyword != null and keyword != ''">
                AND title LIKE CONCAT('%', #{keyword}, '%')
            </if>
            <if test="keyword != null and keyword != ''">
                AND language LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
    </select>
    <select id="pageSolutionCardVosByUserId" resultType="com.david.solution.vo.SolutionCardVo">
        SELECT *
        FROM solutions
        where user_id = #{userId}
    </select>
</mapper>